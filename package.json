{
  "name": "electron-base-app",
  "version": "1.0.0",
  "description": "Basic Electron application with JavaScript",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:secure": "npm run build && node electron-secure-packer.js",
    "obfuscate": "node js-vm-obfuscator.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "savis",
  "license": "MIT",
  "devDependencies": {
    "acorn": "^8.10.0",
    "electron": "^25.3.1",
    "electron-builder": "^24.4.0",
    "escodegen": "^2.1.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.example.electron-app",
    "productName": "Electron Base App",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "dist"
    }
  }
}